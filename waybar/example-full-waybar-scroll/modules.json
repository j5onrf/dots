//        Full Waybar Scroll (2025)         


    // Workspaces
{
    "hyprland/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "I",
            "2": "II",
            "3": "III",
            "4": "IV",
            "5": "V",
            "active": ""
        },

//   _      __         __                            ____             ____
//  | | /| / /__  ____/ /__ ___ ___  ___ ________   / __/__________  / / /
//  | |/ |/ / _ \/ __/  '_/(_-</ _ \/ _ `/ __/ -_) _\ \/ __/ __/ _ \/ / / 
//  |__/|__/\___/_/ /_/\_\/___/ .__/\_,_/\__/\__/ /___/\__/_/  \___/_/_/  
//                           /_/  
                                        
    // Scroll Width Workspaces Custom Value for your screen size
    // Extra Workspaces will not activate until on-click and be hidden with CSS style
        
        "persistent-workspaces": {
            "*": 30
        }
    },



    
//   _   __     __                  ____             ____
//  | | / /__  / /_ ____ _  ___    / __/__________  / / /
//  | |/ / _ \/ / // /  ' \/ -_)  _\ \/ __/ __/ _ \/ / / 
//  |___/\___/_/\_,_/_/_/_/\__/  /___/\__/_/  \___/_/_/  
                                                        
    // Pulseaudio
    "pulseaudio": {
        "tooltip": false,
        "scroll-step": 3,
        
    // Scroll Volume Edit Custom Spaces Width for your screen size                                                
        "format": "                                                                                  󰕾 {volume}",
    //                                                                                                            
        
        "format-icons": {
        "default": ["", "", ""]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        
    // Scroll Volume Mute Button Edit Custom Spaces Width for your screen size                                     
        "format-muted": "                                                               婢 {volume}"
    //                                                                                                             
        
    },
}

