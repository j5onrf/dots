// Workspaces
{
"hyprland/workspaces#rw": {
	"disable-scroll": true,
	"all-outputs": true,
	"warp-on-scroll": false,
	"sort-by-number": true,
	"show-special": false,
        "on-click": "activate",
	"on-scroll-up": "hyprctl dispatch workspace e-1",
	"on-scroll-down": "hyprctl dispatch workspace e+1",
     // "format": "{icon} {windows}",
	"format": "{windows}",  
	"persistent-workspaces": {"*": 27},
	"format-window-separator": " ",
	"window-rewrite-default": "",
	"window-rewrite": {
		"title<.*youtube.*>": "",	  
		"title<.*amazon.*>": "",
		"title<.*reddit.*>": "",
		"title<.*dot.*>": "",
